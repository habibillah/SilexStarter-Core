
Route::resource(
    '{{entity}}',
    '{{controller}}',
    [
        'as'        => '{{route_name}}',
        'namespace' => '{{namespace}}',
        'except'    => ['create', 'edit']
    ]
);

Route::post(
    '{{entity}}/datatable',
    '{{controller}}:datatable',
    [
        'as'        => '{{route_name}}.datatable',
        'namespace' => '{{namespace}}'
    ]
);
